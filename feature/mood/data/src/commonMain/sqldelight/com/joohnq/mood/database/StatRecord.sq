CREATE TABLE IF NOT EXISTS StatRecord (
    id INTEGER PRIMARY KEY NOT NULL,
    mood INTEGER NOT NULL,
    description TEXT NOT NULL,
    date TEXT DEFAULT CURRENT_DATE NOT NULL UNIQUE
);

getStats:
SELECT * FROM StatRecord;

getStatsByDate:
SELECT * FROM StatRecord WHERE date = :date;

getStatByDate:
SELECT * FROM StatRecord WHERE date = :date;

addStats:
INSERT INTO StatRecord (mood, description) VALUES (:mood, :description);

deleteStat:
DELETE FROM StatRecord WHERE id = :id;
