ij_kotlin_allow_trailing_comma = true

ktlint_chain_wrapping = always          # Forces new lines for chained calls
ktlint_wrapping = always                # General wrapping behavior
ktlint_multiline_expression_wrapping = always  # For complex expressions

# Modifier-specific rules (for Jetpack Compose)
ktlint_compose_modifier_reorder = enabled
ktlint_compose_multiline_expression_wrapping = enabled

[*.{gradle,gradle.kts}]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.gradle.kts]
ktlint_code_style = ktlint_official
ktlint_standard_indent = enabled